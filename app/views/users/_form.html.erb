<%= form_with model: @user, local: true do |form| %>

  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <h4 class="alert-heading"><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :email, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <% if @user.new_record? %>
    <div class="form-group row">
      <%= form.label :password, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :password_confirmation, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :first_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :last_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :image, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
          <%= form.file_field :image, class: 'custom-file-input' %>
          <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
        </div>
      </div>
      <br />
      <% if @user.image.attached? %>
        <%= image_tag @user.image.variant(resize_to_limit: [100, 100]), class: 'figure-img img-fluid rounded' %>
      <% end %>
    </div>
  </div>

  <%= form.submit class: 'btn btn-primary' %>

<% end %>
