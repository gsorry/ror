<h1 class="mt-5">Users</h1>


<nav class="nav">
  <%= link_to 'New User', new_user_path, class: 'nav-link' %>
</nav>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Image</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% cache @users do %>
      <% @users.each do |user| %>
        <%= render user, cached: true %>
      <% end %>
    <% end %>
  </tbody>
</table>
